<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="vtb_text_logo">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="news_text_logo">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="next_button_style">
        <item name="android:drawableRight">@drawable/arrow_forward</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="button_sing_in_style">
        <item name="android:backgroundTint">@color/dark_white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edit_text_style">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="news_text_logo_small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="vtb_text_logo_small">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_style">
        <item name="android:text">@string/register</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="field_style">
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="search_edit_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/white_field_shape</item>
    </style>

    <style name="header_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="profile_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="profile_small_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="profile_data_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_color_2</item>
    </style>

    <style name="bottom_navigation_style">
        <item name="android:background">@color/dark_blue</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selected</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selected</item>
    </style>

    <style name="header_news_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="time_style">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/hint_color_2</item>
    </style>

    <style name="digest_news_style">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_news_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="news_content_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>